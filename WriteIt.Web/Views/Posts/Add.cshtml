@model PostCreationBindingModel
@{
    ViewData["Title"] = "Create post for " + Model.ThreadInstanceName;
}

<h2>@ViewData["Title"]</h2>
<form asp-area="" asp-controller="Posts" asp-action="Add"
      method="post" class="form-horizontal">
    @Html.EditorForModel()
    <div class="form-group">
        <div class="col-sm-10 col-sm-push-2">
            <input type="submit" value="Create" class="btn btn-success" />
            <a asp-area="" asp-page="/Posts/Index" asp-route-id="@Model.ThreadInstanceId" class="btn btn-default">Cancel</a>
        </div>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}