@model CommentCreationBindingModel
@{
    ViewData["Title"] = "Create comment for " + Model.PostName;
}

<h2>@ViewData["Title"]</h2>
<form asp-area="" asp-controller="Comments" asp-action="Add" method="post" class="form-horizontal">
    @Html.EditorForModel()
    <div class="form-group">
        <div class="col-sm-10 col-sm-push-2">
            <input type="submit" value="Create" class="btn btn-success" />
            <a asp-area="" asp-page="/Comments/All" asp-route-id="@Model.PostId" class="btn btn-default">Cancel</a>
        </div>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}