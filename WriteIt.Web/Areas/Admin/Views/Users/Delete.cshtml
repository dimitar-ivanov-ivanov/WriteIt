@model UserDeleteViewModel
@{
    ViewData["Title"] = "Delete";
}

<h2>Delete user</h2>
<form asp-area="Admin" asp-controller="Users" asp-action="Delete" method="post" class="form-horizontal">
    @Html.EditorForModel()
    <div class="form-group">
        <div class="col-sm-10 col-sm-push-2">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="btn btn-default">Cancel</a>
        </div>
    </div>
</form>