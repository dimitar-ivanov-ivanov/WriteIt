@model ThreadCreationBindingModel
@{
    ViewData["Title"] = "Create";
}

<h2>Create thread</h2>
<form asp-area="Admin" asp-controller="Threads" asp-action="Create"
      method="post" class="form-horizontal">
    @Html.EditorForModel()
    <div class="form-group">
        <div class="col-sm-10 col-sm-push-2">
            <input type="submit" value="Create" class="btn btn-success" />
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-default">Cancel</a>
        </div>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}