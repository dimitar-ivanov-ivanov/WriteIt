@model ThreadInstanceCreationBindingModel
@{
    ViewData["Title"] = "Create thread instance";
}

<h2>Create thread instance</h2>
<form class="form-horizontal" asp-area="Moderator" asp-controller="ThreadInstances" asp-action="Create" method="post">
    @Html.EditorForModel()
    <div class="form-group">
        <div class="col-sm-10 col-sm-push-2">
            <input type="submit" value="Create" class="btn btn-success" />
            <a asp-area="Moderator" asp-controller="Home" asp-action="Index" class="btn btn-default">Cancel</a>
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}