@model ThreadInstanceEditBindingModel
@{
    ViewData["Title"] = "Edit instance";
}

<h2>Edit instance</h2>
<form asp-area="Moderator" asp-controller="ThreadInstances" asp-action="Edit" method="post" class="form-horizontal">
    @Html.EditorForModel()
    <div class="form-group">
        <div class="col-sm-10 col-sm-push-2">
            <input type="submit" value="Edit" class="btn btn-warning" />
            <a asp-area="Moderator" asp-controller="ThreadInstances" asp-action="Index" class="btn btn-default">Cancel</a>
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}